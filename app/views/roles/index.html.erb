<div class="container">
    <div class="page-header">
        <h2>Roles<span class="pull-right label label-default"></span></h2>
    </div>
    <div class="row">
        <div class="col-md-12">
              <%= link_to 'New Role', new_role_path, class: "btn btn-primary" %>
