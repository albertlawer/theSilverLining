<div class="container">
    <div class="page-header">
        <h2>Investments<span class="pull-right label label-default"></span></h2>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel with-nav-tabs panel-default">
              <div class="table-responsive">
                  <table class="table table-striped jambo_table table-bordered">
                    <thead>
                      <tr class="headings">
                        <th class="column-title">Client</th>
                        <th class="column-title">Investment ID</th>
                        <th class="column-title">Amount (GHS)</th>
                        <th class="column-title">Status</th>
                        <th class="column-title">Start Date</th>
                        <th class="column-title">End Date</th>
                        <th class="column-title">Days Left</th>
                      </tr>
                    </thead>
                    <tbody>
                    <% @investment_masters.each do |investment_master| %>
                      <tr>
                        <td><%= investment_master.a_user.last_name+", "+investment_master.a_user.other_names %></td>
                        <td><%= investment_master.transaction_code %></td>
                        <td><%= investment_master.amount_invested %></td>
                        <td>
                          <% if investment_master.status %>
                            <span class="badge badge-success">Active</span>
                          <% else %>
                            <span class="badge badge-danger">Inactive</span>
                          <% end %>
                        </td>
                        <td><%= investment_master.start_date.strftime("%F") %></td>
                        <td><%= @end_date = investment_master.end_date.strftime("%F") %></td>
                        <td>
                        	<% if investment_master.status %>
		                        <% @today = Date.today.strftime("%F") %>
		                        <% @result =  @end_date.to_date - @today.to_date %>
		                        <%= @result = @result.to_i %>
                          <% end %>
                        </td>
                      </tr>
                    <% end %>
                    </tbody>
                  </table>
                </div>
                     
                </div>
            </div>
    </div>
</div>














