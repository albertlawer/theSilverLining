					              <td> <%= permission.name %> </td>
					              <td> <%= permission.description %> </td>
					            </tr>
					        <% end %>
			            </tbody>
		            </table>
		       </div>
	          <%= link_to 'Edit Role', edit_role_path(@role), :class => "btn btn-primary" %>
